<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/match_card_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/body_part_ir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/body_part"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/description_ir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/injury_description"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_below="@id/body_part_ir"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/level_of_pain_ir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/level_of_pain"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_below="@id/body_part_ir"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="100dp" />

            <TextView
                android:id="@+id/date_ir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_below="@id/description_ir"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/length_of_injury"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/length_of_injury"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_below="@id/level_of_pain_ir"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="83dp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
