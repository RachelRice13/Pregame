<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/pregame_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pregame_logo"
        android:layout_above="@id/basketball_player_playing_image"/>

    <ImageView
        android:id="@+id/basketball_player_playing_image"
        android:layout_width="wrap_content"
        android:layout_height="375dp"
        android:layout_centerInParent="true"
        android:src="@drawable/basketball_player_dunking"/>

</RelativeLayout>