<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingPage">

    <ImageView
        android:id="@+id/pregame_logo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/pregame_logo"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/basketball_player_image"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@drawable/player_layup"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pregame_logo"
        android:contentDescription="@string/basketball_image_description"/>

    <Button
        android:id="@+id/register_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/basketball_player_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/transparent_button"
        android:text="@string/register_button"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/transparent_button"
        android:text="@string/login_button"
        android:textColor="@color/black"
        android:textSize="20sp"/>

</RelativeLayout>