<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/customer_border_white_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="visible" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/go_back"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:backgroundTint="@color/transparent"
                android:clickable="true"
                android:contentDescription="@string/go_back"
                android:focusable="true"
                android:foregroundGravity="center_vertical"
                android:src="@drawable/ic_arrow_back"
                app:borderWidth="0dp"
                app:elevation="0dp"
                app:fabCustomSize="15dp" />

            <TextView
                android:id="@+id/injury_report_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@id/go_back"
                android:layout_alignBottom="@id/go_back"
                android:gravity="center"
                android:text="@string/injury_report"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/body_part_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawablePadding="15dp"
            android:text="@string/body_part"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:drawableStartCompat="@drawable/ic_injury" />

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawablePadding="15dp"
            android:text="@string/description"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:drawableStartCompat="@drawable/ic_description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/level_of_pain_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="15dp"
                android:text="@string/level_of_pain"
                android:textColor="#000"
                android:textSize="20sp"
                app:drawableStartCompat="@drawable/ic_level_of_pain" />

            <TextView
                android:id="@+id/seen_physio_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="15dp"
                android:text="@string/seen_a_physio"
                android:textColor="#000"
                android:textSize="20sp"
                app:drawableStartCompat="@drawable/ic_healing" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_of_injury_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="15dp"
                android:text="@string/date"
                android:textColor="#000"
                android:textSize="20sp"
                app:drawableStartCompat="@drawable/ic_calendar_events" />

            <TextView
                android:id="@+id/length_of_injury_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="15dp"
                android:text="@string/length_of_injury"
                android:textColor="#000"
                android:textSize="20sp"
                app:drawableStartCompat="@drawable/ic_time" />
        </LinearLayout>

        <TextView
            android:id="@+id/other_details_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawablePadding="15dp"
            android:text="@string/other_details"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:drawableStartCompat="@drawable/ic_details" />
    </LinearLayout>
</RelativeLayout>