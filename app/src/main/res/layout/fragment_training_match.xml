<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainingMatch.TrainingMatchFragment">

    <TextView
        android:id="@+id/team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/team_name"
        android:textSize="30sp"/>

    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/team_name">

        <Button
            android:id="@+id/add_match_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_alignParentStart="true"
            android:text="@string/add_match"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/add_training_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_training"
            android:textColor="@color/white"
            android:layout_marginEnd="40dp"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/match_training_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/buttons"
        android:orientation="horizontal">

        <Button
            android:id="@+id/view_matches_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/matches"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/view_trainings_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trainings"
            android:layout_weight="1"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/matches_rl"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/match_training_buttons"
        android:layout_marginTop="20dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/matches_rv_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/matches"
            android:textSize="18sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/match_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/matches_rv_tv"
            android:layout_marginTop="5dp"
            android:padding="6dp"
            android:scrollbars="vertical"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/training_rl"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/match_training_buttons"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/trainings_rv_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trainings"
            android:textSize="18sp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/training_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/trainings_rv_tv"
            android:layout_marginTop="5dp"
            android:padding="6dp"
            android:scrollbars="vertical"/>

    </RelativeLayout>

</RelativeLayout>