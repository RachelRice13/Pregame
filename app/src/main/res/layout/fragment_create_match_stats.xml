<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Stats.CreateMatchStatsFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_team_scores"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_horizontal"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/black_border">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/made"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/my_team_plus_one_fb"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:contentDescription="@string/made_free_throw"
                            android:src="@android:color/transparent"
                            tools:ignore="TouchTargetSizeCheck,ImageContrastCheck,DuplicateSpeakableTextCheck" />

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/plus_one"
                            android:textSize="20sp"
                            android:elevation="16dp"
                            tools:ignore="TextContrastCheck"
                            android:textColor="@android:color/white" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/my_team_plus_two_fb"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@android:color/transparent"
                            tools:ignore="TouchTargetSizeCheck,ImageContrastCheck,DuplicateSpeakableTextCheck"
                            android:contentDescription="@string/made_two_point"/>

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/plus_two"
                            android:textSize="20sp"
                            android:elevation="16dp"
                            tools:ignore="TextContrastCheck"
                            android:textColor="@android:color/white" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/my_team_plus_three_fb"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@android:color/transparent"
                            tools:ignore="TouchTargetSizeCheck,ImageContrastCheck,DuplicateSpeakableTextCheck"
                            android:contentDescription="@string/made_three_point"/>

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:elevation="16dp"
                            android:gravity="center"
                            android:text="@string/plus_three"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            tools:ignore="TextContrastCheck" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/black_border"
                    android:layout_marginStart="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/missed"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/my_team_miss_one_fb"
                            android:layout_width="45dp"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/missed_free_throw"
                            android:src="@android:color/transparent"
                            tools:ignore="TouchTargetSizeCheck,ImageContrastCheck,DuplicateSpeakableTextCheck"/>

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/plus_one"
                            android:textSize="20sp"
                            android:elevation="16dp"
                            tools:ignore="TextContrastCheck"
                            android:textColor="@android:color/white" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/my_team_miss_two_fb"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@android:color/transparent"
                            tools:ignore="TouchTargetSizeCheck,ImageContrastCheck,DuplicateSpeakableTextCheck"
                            android:contentDescription="@string/missed_two_point"/>

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:elevation="16dp"
                            android:gravity="center"
                            android:text="@string/plus_two"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            tools:ignore="TextContrastCheck" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/my_team_miss_three_fb"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@android:color/transparent"
                            tools:ignore="TouchTargetSizeCheck,ImageContrastCheck,DuplicateSpeakableTextCheck"
                            android:contentDescription="@string/missed_three_point"/>

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:elevation="16dp"
                            android:gravity="center"
                            android:text="@string/plus_three"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            tools:ignore="TextContrastCheck" />
                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/opponents_scores"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/black_border">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/made"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/opponent_plus_one_fb"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@android:color/transparent"
                            tools:ignore="TouchTargetSizeCheck,ImageContrastCheck,DuplicateSpeakableTextCheck"
                            android:contentDescription="@string/made_free_throw"/>

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:elevation="16dp"
                            android:gravity="center"
                            android:text="@string/plus_one"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            tools:ignore="TextContrastCheck" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/opponent_plus_two_fb"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:contentDescription="@string/made_two_point"
                            android:src="@android:color/transparent"
                            tools:ignore="TouchTargetSizeCheck,ImageContrastCheck,DuplicateSpeakableTextCheck" />

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:elevation="16dp"
                            android:gravity="center"
                            android:text="@string/plus_two"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            tools:ignore="TextContrastCheck" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/opponent_plus_three_fb"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:contentDescription="@string/made_three_point"
                            android:src="@android:color/transparent"
                            tools:ignore="TouchTargetSizeCheck,ImageContrastCheck,DuplicateSpeakableTextCheck" />

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:elevation="16dp"
                            android:gravity="center"
                            android:text="@string/plus_three"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            tools:ignore="TextContrastCheck" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/black_border"
                    android:layout_marginStart="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/missed"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/opponent_miss_one_fb"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@android:color/transparent"
                            tools:ignore="TouchTargetSizeCheck,ImageContrastCheck,DuplicateSpeakableTextCheck"
                            android:contentDescription="@string/missed_free_throw"/>

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:elevation="16dp"
                            android:gravity="center"
                            android:text="@string/plus_one"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            tools:ignore="TextContrastCheck" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/opponent_miss_two_fb"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@android:color/transparent"
                            tools:ignore="TouchTargetSizeCheck,ImageContrastCheck,DuplicateSpeakableTextCheck"
                            android:contentDescription="@string/missed_two_point"/>

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:elevation="16dp"
                            android:gravity="center"
                            android:text="@string/plus_two"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            tools:ignore="TextContrastCheck" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/opponent_miss_three_fb"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@android:color/transparent"
                            tools:ignore="TouchTargetSizeCheck,ImageContrastCheck,DuplicateSpeakableTextCheck"
                            android:contentDescription="@string/missed_three_point"/>

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:elevation="16dp"
                            android:gravity="center"
                            android:text="@string/plus_three"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            tools:ignore="TextContrastCheck" />
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="20dp">

            <Button
                android:id="@+id/offensive_rebound_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/offensive_rebounds"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/defensive_rebound_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/defensive_rebounds"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/assist_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/assist"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/block_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/block"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/turnover_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/turnover"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/steal_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/steal"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/foul_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/foul"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/black_border"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/my_team_score_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/scr"
                android:gravity="end"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/my_team_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="end"
                android:text="@string/my_team"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/vs"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/opponent_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/opponent_name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/opponent_score_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/scr"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/messages_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/message"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="10dp"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/end_match_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/end_match"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="10dp"
                style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>